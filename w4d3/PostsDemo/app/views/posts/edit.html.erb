<%= render :partial => "layouts/errors" %>

<form action="<%= post_url(@post) %>" method="post" accept-charset="utf-8">
  <input type="hidden" name="_method" value="PATCH" />
  <label for="title">Title</label>
  <input type="text" name="post[title]" id="title" 
         value="<%= @post.title %>" />

  <label for="body">Body</label>
  <input type="text" name="post[body]" id="body" 
         value="<%= @post.body %>" />

  <input type="hidden" name="post[categories][]" />
  <label for="1">category 1</label>
  <input type="checkbox" name="post[categories][]" value="1" id="1" />
  <label for="2">category 2</label>
  <input type="checkbox" name="post[categories][]" value="2" id="2" />

  <input type="submit" />
</form>

