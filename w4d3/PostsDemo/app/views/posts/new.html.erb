<%= render :partial => "layouts/errors" %>

<form action="<%= posts_url %>" method="post">
  <label for="title">Title</label>
  <input type="text" name="post[title]" id="title" 
         value="<%= @post.title %>" />

  <label for="body">Body</label>
  <input type="text" name="post[body]" id="body" 
         value="<%= @post.body %>" />

  <input type="submit" />
</form>

